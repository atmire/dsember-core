<a class="image-link" href="{{originalLink}}" download="{{filename}}">
{{#if thumbnailLink}}
    <img alt="{{t 'thumbnail.alt'}}" src="{{thumbnailLink}}">
{{else}}
    <img alt="{{t 'thumbnail.not-found.alt'}}" data-src="holder.js/100%x80/text:{{t 'thumbnail.not-found.alt'}}" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 80px; width: 100%; display: block;">
{{/if}}
</a>